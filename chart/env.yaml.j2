fullnameOverride: "{{ KUBERNETES.CDNDOMAIN_FULLNAME_OVERRIDE }}"

image:
  repository: {{ IMAGES.CAESAR_CDNDOMAIN_TAG.split(":")[0] }}
  pullPolicy: Always
  # Overrides the image tag whose default is the chart version.
  tag: {{ IMAGES.CAESAR_CDNDOMAIN_TAG.split(":")[1] }}
  
config: 
  secret_key: {{ SECRETS.SECRET_KEY }}
  debug: false

nginx:
  port: 8000

db:
  db_host: {{ POSTGRESQL.POSTGRESQL_DB_HOST }}
  db_port: {{ POSTGRESQL.POSTGRESQL_DB_PORT }}
  db_user: {{ POSTGRESQL.POSTGRESQL_DB_USER }}
  db_password: {{ POSTGRESQL.POSTGRESQL_DB_PASS }}
  db_database: {{ DATABASES.CDNDOMAIN_DB_NAME }}

ingress:
  enabled: false
  annotations: {}
  hosts:
    - host: domain.cwcdn.com
      paths:
      - /
    - host: api.cwcdn.com
      paths:
      - /api/v1/domain/

resources:
  requests:
    cpu: "200m"
    memory: "512Mi"

autoscaling:
  enabled: true
  minReplicas: 2
  maxReplicas: 5
  targetCPUUtilizationPercentage: 80
  targetMemoryUtilizationPercentage: 75

env:
  TIME_ZONE: "{{ GLOBALS.TIME_ZONE }}"
  