fullnameOverride: "{{ KUBERNETES.COMMON_FULLNAME_OVERRIDE }}-worker"

celerypy:
  enabled: true
  role: worker
  
deployment:
  args: ['-A', 'common', 'worker', '-l', 'info', '-Q', 'common', '-c', '"10"']

resources:
  requests:
    cpu: "100m"
    memory: "1285Mi"

autoscaling:
  enabled: true
  minReplicas: 2
  maxReplicas: 5
  targetCPUUtilizationPercentage: 80
  targetMemoryUtilizationPercentage: 75